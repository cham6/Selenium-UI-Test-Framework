    @Test
    public void testViewActionOnNewBranch() {
    	try {
    		loginAndNavigateToBranchesPage();
	    	branchPage = new BranchPage(driver);
	    	branchPage.createNewBranch("CHAMBRANCHNEW", "CHAMCODE");
